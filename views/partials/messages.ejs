<% if (typeof errors !== 'undefined') { %>
<div class="alert error">
    <ul>
    <% errors.forEach(err => { %>
        <li><%= err.msg %></li>
    <% }) %>
    </ul>
</div>
<% } %>

<% if (success_msg != '') { %>
<div class="alert success">
    <%= success_msg %> 
</div>
<% } %>

<% if (error_msg != '') { %>
<div class="alert error">
    <%= error_msg %> 
</div>
<% } %>

<% if (error != '') { %>
<div class="alert error">
    <%= error %> 
</div>
<% } %>